<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/grey_100"
        android:padding="18dp">

        <TextView
            android:id="@+id/tv_itemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_toStartOf="@+id/btn_minus"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Item Name"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/btn_minus" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_itemName"
            android:text="$XX.XX"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_remove"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="4dp"
            android:background="@drawable/ic_trash"
            android:padding="0dp"
            android:layout_marginRight="4dp"
            android:layout_alignParentRight="true" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="28dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="24dp"
            android:layout_toStartOf="@+id/btn_remove"
            android:background="@drawable/btn_rounded"
            android:padding="0dp"
            android:text="+"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginRight="24dp"
            android:layout_toLeftOf="@+id/btn_remove" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@id/btn_add"
            android:gravity="center"
            android:text="X"
            android:textSize="16sp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@id/btn_add" />


        <Button
            android:id="@+id/btn_minus"
            android:layout_width="28dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="4dp"
            android:layout_toStartOf="@+id/tv_quantity"
            android:background="@drawable/btn_rounded"
            android:padding="0dp"
            android:text="-"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/tv_quantity" />

    </RelativeLayout>

</LinearLayout>
